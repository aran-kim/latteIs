{{>layout/header}}

<nav class="codrops-demos">
    <a href="/">Home</a>
    <a href="/mychatroom">Chatting</a>
    <a href="/search">Search</a>
    <a class="current-demo" href="/board">Board</a>
    <a href="/info">Info</a>
</nav>
</header>

<div>
    <!-- Top content -->
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h1><strong>Board</strong></h1>
                                <p>Select Board Category</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <table class="table-board">
                                <thead class="thead-strong">
                                <tr>
                                    <th>게시판 주제</th>
                                </tr>
                                </thead>
                                <tbody id="tbody">
                                {{#board}}
                                    <tr>
                                        <td><a onclick="location.href='post?board_id='+{{id}}">{{subject}}</a></td>
                                    </tr>
                                {{/board}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>

    </footer>
</div>

{{>layout/footer}}