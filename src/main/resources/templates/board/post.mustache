{{>layout/header}}

<nav class="codrops-demos">
    <a href="/">Home</a>
    <a href="/chat/chatroom">Chatting</a>
    <a href="/search">Search</a>
    <a class="current-demo" href="/board">Board</a>
    <a href="/info">Info</a>
</nav>

</header>

<div>
    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">

                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <a onclick="location.href='/board/post?board_id={{board_id}}'"><h3>{{board_name}}</h3></a>
                            </div>

                        </div>


                            <table class="post-list mgT20">

                                <colgroup>
                                    <col style="width: 70%;">
                                    <col style="width: 15%;">
                                    <col style="width: 15%;">
                                </colgroup>

                                <thead>
                                <tr>
                                    <th scope="col">제목</th>
                                    <th scope="col">작성자</th>
                                    <th scope="col">작성 시간</th>
                                </tr>
                                </thead>

                                <tbody>
                                {{#post}}
                                    <tr>
                                        <td><a onclick="location.href='post/postDetail?board_id='+{{board_id}}+'&post_id='+{{id}}">{{title}}</a></td>
                                        <td>{{user.nickName}}</td>
                                        <td>{{createDate}}</td>
                                    </tr>
                                {{/post}}
                                </tbody>
                            </table>

                        <button type="button" class="btn" style="float:right" onclick="location.href='post/postSave?board_id='+{{board_id}}">글 등록</button>

                    </div>

            </div>
        </div>

    </div>

    <!-- Footer -->
    <footer>

    </footer>
</div>

{{>layout/footer}}