{{>layout/header}}

<nav class="codrops-demos">
    <a href="/">Home</a>
    <a href="/chat/chatroom">Chatting</a>
    <a href="/search">Search</a>
    <a class="current-demo" href="/board">Board</a>
    <a href="/info">Info</a>
</nav>
</header>

<div>
    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">

                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h1><strong>Post</strong></h1>
                                <p>Read Post Content</p>
                            </div>

                        </div>

                            <table class="post-list mgT20">

                                <colgroup>
                                    <col style="width: 15%;">
                                    <col style="width: 15%;">
                                    <col style="width: 10%;">
                                    <col style="width: 40%;">
                                    <col style="width: 20%;">
                                </colgroup>

                                <thead>
                                <tr>
                                    <th scope="col">번호</th>
                                    <th scope="col">제목</th>
                                    <th scope="col">작성자</th>
                                    <th scope="col">내용</th>
                                    <th scope="col">최종 수정일</th>
                                </tr>
                                </thead>

                                <tbody>
                                {{#post}}
                                    <tr>
                                        <td>{{id}}</td>
                                        <td>{{title}}</td>
                                        <td>{{writername}}</td>
                                        <td>{{content}}</td>
                                        <td>{{createDate}}</td>
                                    </tr>
                                {{/post}}
                                </tbody>

                            </table>

                    </div>



            </div>
        </div>

    </div>

    <!-- Footer -->
    <footer>

    </footer>
</div>

{{>layout/footer}}