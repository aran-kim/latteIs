{{>layout/header}}

<nav class="codrops-demos">
    <a href="/">Home</a>
    <a href="/chat/chatroom">Chatting</a>
    <a href="/search">Search</a>
    <a href="/board">Board</a>
    <a class="current-demo" href="/info">Info</a>
</nav>
</header>

<div>
    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container" id="container">
                <div class="row">
                    <h3>팔로워 친구들</h3>
                    <div class="search">
                        <div class="search-list">
                            <td class="td_name">
                                {{#followerList}}
                                    <img src="../profile_images/{{user.image}}" alt="no_profile" style="width: 55px; height: 55px; margin:10px; border-radius: 70%">{{user.nickName}}<br>
                                    <button type="button"
                                            onclick="location.href = '/chat/personalChat?user_id=' + {{user.id}}">개인톡
                                    </button>
                                    <input type="hidden" id="user_id" name="user_id" value="{{user.id}}"/>
                                    <button type="button" id="btn-followerCancel" class="btn-followerCancel" value="{{user.id}}">팔로우 취소</button><br>
                                    <a onclick="location.href='/search/friendDetail?user_id='+{{user.id}}">정보 보기</a>

                                {{/followerList}}
                                {{^followerList}}
                                    팔로워한 친구가 없어용
                                {{/followerList}}
                            </td>
                        </div>

                    </div>

                </div>
            </div>

        </div>

        <!-- Footer -->
        <footer>

        </footer>
    </div>

{{>layout/footer}}