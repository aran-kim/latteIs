{{>layout/header}}

<nav class="codrops-demos">
    <a href="/">Home</a>
    <a href="/mychatroom">Chatting</a>
    <a href="/search">Search</a>
    <a class="current-demo" href="/board">Board</a>
    <a href="/info">Info</a>
</nav>
</header>

<div>
    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h1><strong>PostList</strong></h1>
                                <p>Select Post for PostList</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <a onclick="location.href='postSave?board_id='+{{board_id}}">글 등록</a>
                            <table class="table-post-list">
                                <thead class="thead-strong">
                                <tr>
                                    <th>게시글 번호</th>
                                    <th>제목</th>
                                    <th>작성자</th>
                                </tr>
                                </thead>
                                <tbody id="tbody">
                                {{#post}}
                                    <tr>
                                        <td>{{id}}</td>
                                        <td><a onclick="location.href='postDetail?board_id='+{{board_id}}+'&post_id='+{{id}}">{{title}}</a></td>
                                        <td>{{user.nickName}}</td>
                                    </tr>
                                {{/post}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Footer -->
    <footer>

    </footer>
</div>

{{>layout/footer}}